# RubriCheck Environment Configuration
# Copy this file to .env and fill in your actual values

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Flask Backend Configuration
FLASK_HOST=0.0.0.0
FLASK_PORT=8000
FLASK_DEBUG=True

# Frontend Configuration (for Vite)
VITE_API_BASE_URL=http://localhost:8000

# Optional: Database Configuration (if you add database support later)
# DATABASE_URL=sqlite:///rubricheck.db
# DATABASE_URL=postgresql://user:password@localhost/rubricheck

VITE_SUPABASE_URL=https://your-project-id.supabase.co
VITE_SUPABASE_ANON_KEY=eyJ...your-anon-key

# Optional: Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=rubricheck.log

# Optional: File Upload Configuration
MAX_CONTENT_LENGTH=16777216  # 16MB in bytes
UPLOAD_FOLDER=uploads/

# Optional: CORS Configuration
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
